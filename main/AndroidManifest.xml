<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Add Internet Permission for Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BudgetTracker"
        tools:targetApi="31">

        <!-- Login Activity - This is now the LAUNCHER -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true"
            android:label="Login"
            android:theme="@style/Theme.BudgetTracker.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Signup Activity -->
        <activity
            android:name=".activities.SignupActivity"
            android:exported="false"
            android:label="Sign Up"
            android:theme="@style/Theme.BudgetTracker.NoActionBar" />

        <!-- Forgot Password Activity -->
        <activity
            android:name=".activities.ForgotPasswordActivity"
            android:exported="false"
            android:label="Reset Password"
            android:theme="@style/Theme.BudgetTracker.NoActionBar" />

        <!-- Main Activity - Requires login -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.BudgetTracker.NoActionBar" />

        <!-- Add Transaction Activity -->
        <activity
            android:name=".activities.AddTransactionActivity"
            android:exported="false"
            android:label="Add Transaction"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.BudgetTracker.NoActionBar" />

    </application>

</manifest>